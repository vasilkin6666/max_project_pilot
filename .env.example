# .env.example
# --- Общие ---
APP_ENV=development

# --- Бот ---
BOT_TOKEN=your_max_bot_token

# --- Backend ---
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=max_pilot_db
